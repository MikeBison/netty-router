<Configuration status="ERROR">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %highlight{%-5level} %logger{36} - %highlight{%msg}%n%throwable"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="error">
            <AppenderRef ref="Console"/>
            <!--<AppenderRef ref="socket"/>-->
        </Root>
        <Logger name="com.chigix" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
            <!--<AppenderRef ref="socket"/>-->
        </Logger>
        <Logger name="io.netty.handler.codec.http" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
            <!--<AppenderRef ref="socket"/>-->
        </Logger>
        <Logger name="io.netty.handler.routing" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
            <!--<AppenderRef ref="socket"/>-->
        </Logger>
        <Logger name="io.netty" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
            <!--<AppenderRef ref="socket"/>-->
        </Logger>
    </Loggers>
</Configuration>

